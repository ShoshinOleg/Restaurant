<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Restaurant" parent="Theme.MaterialComponents.DayNight.NoActionBar">
<!--        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/darkGreen</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="LargeAppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/LargeAppModalStyle</item>
    </style>

    <style name="LargeAppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/large_bottom_sheet_background</item>
    </style>

    <style name="AppSplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="background">@color/splash_background</item>
        <item name="android:colorPrimary">@color/splash_background</item>
        <item name="colorPrimary">@color/splash_background</item>
        <item name="android:colorPrimaryDark">@color/splash_toolbar_background</item>
        <item name="colorPrimaryDark">@color/splash_toolbar_background</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:background">@color/lightGray</item>
    </style>

    <style name="DishHolderCard">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <style name="CartItemCounterButton">
        <item name="cardBackgroundColor">@color/lightGray</item>
    </style>

    <style name="DishPriceCard">
        <item name="cardBackgroundColor">@color/lightGray</item>
    </style>

    <style name="OptionCard">
        <item name="cardBackgroundColor">@color/lightGray</item>
    </style>

    <style name="OptionAddCard">
        <item name="cardBackgroundColor">?attr/background</item>
    </style>

    <style name="SomeIcon">
        <item name="tint">@color/black</item>
    </style>
    
    <style name="CheckBox">
        <item name="android:buttonTint">@color/black</item>
    </style>

    <style name="TabLayout">
        <item name="background">@color/white</item>
    </style>

    <style name="SwitcherCard">
        <item name="cardBackgroundColor">@color/darkGray</item>
    </style>
</resources>